{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "lineEnding": "crlf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"

    }
  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
